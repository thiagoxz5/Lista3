#include <stdio.h>

int verificaNum (int N){
  if (N >= 0) {
    printf("True\n\n");
  } else {
    printf("False\n\n");
  }
  }

int main(void) {
  int num;
  //Os valores não param de ser informados até que o usuário digite 777
  do { 
    printf("Digite o valor de um número inteiro:\n");
  scanf("%d", &num);
  verificaNum (num);
    } while (num != 777);
}

#include <stdio.h>

float formula(int N) {
  float s = 0, res = 0;
  for (float x = 1; x <= N; x++) {
    s = (((x * x) + 1) / ((x + 3)));
  res += s;
    }
  return res;
}

int main(void) {
  int n;
  printf("Digite um valor de X\n");
  scanf("%d", &n);
  printf("O valor de S Ã© igual a: %0.2f\n", formula(n));
  return 0;
}
